{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build/tool"
  },
  "include": ["index.ts", "src/*"]
}